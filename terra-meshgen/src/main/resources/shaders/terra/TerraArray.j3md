MaterialDef Terrain {

    MaterialParameters {
        Texture2D ColorMap
        Float tile
        Float tileIndex
    }

    Technique {
        VertexShader GLSL400:   shaders/terra/TerraArray.vert
        FragmentShader GLSL400: shaders/terra/TerraArray.frag

        WorldParameters {
            WorldViewProjectionMatrix
        }

        Defines {
           TILE : tile
        }
    }
}